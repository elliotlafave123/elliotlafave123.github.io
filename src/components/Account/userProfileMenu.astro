<div class="c-user-profile">
  <button class="c-user-profile__toggle">
    <h3>My account</h3>
    <div class="c-user-profile__toggle-icon">
      <i class="fa-sharp fa-solid fa-circle-user"></i>
    </div>
  </button>

  <div class="c-profile c-profile--hidden">
    <div class="c-profile__container">
      <div class="c-profile-image">
