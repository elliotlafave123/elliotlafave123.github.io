---
import "../../public/css/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer/FooterBase.astro";
import BaseHead from "./BaseHead.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead title={title} />
  <body>
    <Header />
    <main id="main">
      <div class="c-container" style="padding-bottom: 0;">
        <nav class="c-breadcrumb" id="breadcrumbNav"></nav>
      </div>
      <slot />
    </main>
    <Footer />
  </body>
</html>
