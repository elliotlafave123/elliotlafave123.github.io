---
import "../../public/css/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer/FooterBase.astro";
import BaseHead from "./BaseHead.astro";

export interface Props {
  title: string;
}

const isTestSubdomain = import.meta.env.VITE_NETLIFY_ENV === "test";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead title={isTestSubdomain ? "Test - " + title : title} />
  <body>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
    <script defer src="/scripts/passwordInput-TSBundle.js"></script>
  </body>
</html>
