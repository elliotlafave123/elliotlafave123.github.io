---
import "../../public/css/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer/FooterBase.astro";
import BaseHead from "./BaseHead.astro";

export interface Props {
  title: string;
}

const hostname = typeof window !== "undefined" ? window.location.hostname : "";
const isTestSubdomain = hostname.startsWith("test.");

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead title={isTestSubdomain ? "Test - " : "" + title} />
  <body>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
