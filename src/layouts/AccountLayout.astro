---
import "../../public/css/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer/FooterBase.astro";
import BaseHead from "./BaseHead.astro";
import CookieBanner from "../components/CookieBanner.astro";
import AccountMenu from "../components/Account/accountMenu.astro";

export interface Props {
  title: string;
}

const env = import.meta.env.VITE_NETLIFY_ENV as string;
const isTestSubdomain = env === "test";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead title={isTestSubdomain ? "Test - " + title : title} />
  <body>
    <p class="hidden" id="jsEnvironment">{env}</p>
    <Header />
    <main id="main">
      <div class="c-container-x mobile-only">
        <a
          href="/account-home"
          class="c-button c-button--large c-button--semi-round c-button--gray-secondary c-button--gray-secondary--with-border"
          aria-label="Go to account home"
        >
          <i class="fa-sharp fa-regular fa-arrow-left" aria-hidden="true"></i>
          Account Home
        </a>
      </div>
      <section class="c-container-x hidden">
        <div class="c-dialogue"></div>
      </section>
      <section class="account-layout">
        <AccountMenu />
        <div class="account-layout__content">
          <slot />
        </div>
      </section>
    </main>
    <CookieBanner />
    <Footer />
  </body>
</html>
